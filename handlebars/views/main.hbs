<!-- form para nombre, apellido y edad -->
<form action="/productos" method="post">
    <div class="form-group">
        <label for="name">Producto</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Producto">
    </div>
        <div class="form-group">
        <label for="price">Precio</label>
        <input type="text" class="form-control" id="price" name="price" placeholder="Precio">
    </div>
        <div class="form-group">
        <label for="thumbnail">Imagen</label>
        <input type="text" class="form-control" id="thumbnail" name="thumbnail" placeholder="Imagen">
    </div>
    <button class="btn btn-primary">Enviar</button>
</form>
<div class="div-btn">
    <a href="/productos">
        <button class="btn btn-secondary">Ver Productos</button>
    </a>
</div>